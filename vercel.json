{
  "builds": [
    {
      "src": "api/main.py",
      "use": "@vercel/python",
      "config": { "installCommand": "pip install -r requirements.txt" }
    }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "0 0 * * *"
    }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/api/main.py" }
  ]
}
